extends layout


block content
    link(href='css/mdb.min.css', rel='stylesheet')
    //- script(src='/js/lineChart.js')
    //- script(src='/js/Chart.bundle.js')
    .container-fluid
        .row
            .col-3
                i.far.fa-plus-square.fa-3x
            .col-6
                .card.shadow.mb-4
                    .card-header.py-3
                        h6.m-0.font-weight-bold.text-primary Bar Chart
                    .card-body
                        .chart-bar
                            canvas#scatterChart
            .col-3
                i.fas.fa-sign-out-alt.fa-3x.float-right

        ul.list-group
            li.list-group-item.active Event 1
                col-1.float-right Edit
            each val in [2, 3, 4, 5, 6]
                li.list-group-item Event val
                    .col-1.float-right Edit
